{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    
    <h2 style='text-align:center'>Liste des Posts</h2>
{% for article in article %}
        <h2><a href="{{ path('actualites_article', {'slug': article.slug}) }}">{{ article.titre }}</a></h2>
        <p>Ecrit par: {{article.pseudo}}</p>
    <div style="height: 50px; white-space: nowrap; text-overflow: ellipsis;overflow: hidden;">{{article.contenu|raw}}</div><br>
    <p>Cat√©gories : 
        {% for categorie in article.categories %}
            {{ categorie.nom }} 
        {% endfor %}
    </p>

{% endfor %}
</div>
{{ knp_pagination_render(article, 'pagination.html.twig') }}
{% endblock %}
